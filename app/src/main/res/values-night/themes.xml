<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FoilRecord" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorPrimaryVariant">@color/primary_darker</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_darker</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>